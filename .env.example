# ==============================================
# Variables de Entorno - Backend Citas Médicas
# ==============================================
# Copiar este archivo como .env y configurar los valores

# ==================== BASE DE DATOS ====================
# URL de conexión a la base de datos PostgreSQL
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
SQLALCHEMY_DATABASE_URI=postgresql://usuario:contraseña@host:5432/nombre_db

# Para desarrollo local con MySQL (opcional)
# MYSQL_HOST=localhost
# MYSQL_USER=root
# MYSQL_PASSWORD=tu_contraseña
# MYSQL_DB=citas_medicas
# MYSQL_PORT=3306

# Desactivar tracking de modificaciones de SQLAlchemy
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ==================== SEGURIDAD ====================
# Clave secreta para JWT (cambiar en producción)
SECRET_KEY=tu_clave_secreta_muy_segura_aqui
JWT_COOKIE_SECURE=True # Cambiar a False si usas HTTP (sin SSL)
JWT_COOKIE_SAMESITE=Lax

# ==================== CORS ====================
# URL del frontend (para configuración de CORS)
# En desarrollo: http://localhost:3000
# En producción: https://tu-frontend.vercel.app
FRONTEND_URL=http://localhost:3000

# ==================== SERVICIOS EXTERNOS ====================
# Token de APIs Peru para consulta de DNI (opcional)
API_PERU_DEV_TOKEN=tu_token_de_apisperu

# API Key de Gemini para funciones de IA (opcional)
GEMINI_API_KEY=tu_api_key_de_gemini

# ==================== SERVIDOR ====================
# Puerto del servidor (Railway lo asigna automáticamente)
PORT=5000

# Entorno de ejecución
FLASK_ENV=development
# En producción cambiar a: production
